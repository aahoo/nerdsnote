{
    "rules": {
        "indent": [ 0, 2 ],
        "quotes": [ 2, "single" ],
        "linebreak-style": [ 0, "windows" ],
        "semi": [ 2, "always" ],
        "comma-dangle": [1, "only-multiline"],
        "no-console": [0],
        "no-sparse-arrays": [0]
    },
    "env": {
        "es6": true,
        "browser": true
    },
    "parserOptions": {
        "sourceType": "module",
    },
    "globals": {
        "$$": true,
        "__": true,
        "_": true,
        "log": true,
        "chrome": true,
        "toMarkdown": true,
        "MeMarkdown": true,
        "showdown": true,
        "encodeUrl": true,
        "decodeUrl": true,
        "MediumEditor": true,
        "UrlSync": true,
        "Hotstring": true,
        "MediumButton": true
    },
    "extends": "eslint:recommended"
}
